<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My BookMarks</title>
    <link href="https://cdn.jsdelivr.net/npm/@sweetalert2/theme-dark@4/dark.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="./csss/bookmark.css">
</head>

<body>
    <!--------- PAGE HEADER S --------->
    <header>
        <nav>
            <div class="logo-search">
                <img href="/home" src="./LOGO/ld white.png" class="logos">
                <div class="icon">
                    <a href="#"><i class="fa-solid fa-bookmark"></i></a>
                </div>
            </div>
            <ul>
                <li><a href="/home">Home</a></li>
                <li><a href="/bcollection">Books</a></li>
            </ul>
        </nav>
    </header>
    <!--------- PAGE HEADER E --------->


    <!--------- BORROWED COLLECTION S --------->
    <section class="sec-2">
        <div class="content">
            <div class="titile">
                <h4> MY BOOKMARKS </h4>
            </div>

            <div class="container">
                {{#each boomark}}
                <div class="order-item">
                    <img src="data:image/jpeg;base64,{{ this.Image }}" alt="{{this.Title}}">
                    <div class="item-info">
                        <h4 class="item-name"><a href="/item?bookId={{BookId}}">{{this.Title}}</a></h4>
                        <p class="item-description">Author: {{this.Author}}</p>
                    </div>
                    <form action="/deleteBookmark/{{this._id}}" method="POST">
                        <button type="submit" class="bookmarkz">
                            <i class="fa-solid fa-bookmark"></i>
                        </button>
                    </form>
                </div>
                {{/each}}
            </div>
            <!-- Add pagination links -->
            <div class="pagination">
                {{#if hasPrev}}
                    <a href="/bookmarks?page={{prevPage}}">Previous</a>
                {{/if}}
                {{#if hasNext}}
                    <a href="/bookmarks?page={{nextPage}}">Next</a>
                {{/if}}
            </div>
        </div>
    </section>
    <!--------- BORROWED COLLECTION E --------->
    <!-- Add this script to your bookmarks.hbs file -->
<script>
    document.addEventListener('DOMContentLoaded', function () {
        const bookmarkDeleteButtons = document.querySelectorAll('.bookmarkz');

        bookmarkDeleteButtons.forEach(button => {
            button.addEventListener('click', function (event) {
                event.preventDefault();

                Swal.fire({
                    title: "Are you sure?",
                    text: "You won't be able to revert this!",
                    icon: "warning",
                    showCancelButton: true,
                    confirmButtonColor: "#3085d6",
                    cancelButtonColor: "#d33",
                    confirmButtonText: "Yes, Remove"
                }).then((result) => {
                    if (result.isConfirmed) {
                        // Get the form associated with the clicked button
                        const form = button.closest('form');

                        // Make an AJAX request to delete the bookmark
                        fetch(form.action, {
                            method: 'POST',
                            headers: {
                                'Content-Type': 'application/json'
                            }
                        })
                        .then(response => response.json())
                        .then(data => {
                            if (data.message === "Bookmark deleted successfully") {
                                // Display success message modal
                                Swal.fire('Success!', 'Bookmark Removed successfully.', 'success')
                                    .then(() => {
                                        // Redirect to a success page or update the UI
                                        window.location.reload();
                                    });
                            } else {
                                // Display error message modal
                                Swal.fire({
                                    title: "Failed!",
                                    text: "Bookmark deletion failed.",
                                    icon: "error"
                                });
                            }
                        })
                        .catch(error => {
                            console.error("Error:", error);
                            // Display error message modal
                            Swal.fire({
                                title: "Failed!",
                                text: "Bookmark deletion failed.",
                                icon: "error"
                            });
                        });
                    }
                });
            });
        });
    });
</script>

</body>
</html>