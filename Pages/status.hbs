            </div>

<form id="cancel-request-form" action="/cancel-request/{{book.id}}" method="POST">
    {{#unless (eq requeststatus "Cancelled")}}
        <button type="submit" id="cancel-request-button">Cancel Request</button>
    {{/unless}}
</form>

        </div>

    </div>    
    

   <script>
    document.addEventListener("DOMContentLoaded", function () {
    const cancelForm = document.getElementById("cancel-request-form");
    cancelForm.addEventListener("submit", function (e) {
        e.preventDefault(); // Prevent the default form submission

        Swal.fire({
            title: 'Are you sure?',
            text: "You won't be able to revert this!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Yes, Cancel it!',
        }).then((result) => {
            if (result.isConfirmed) {
                // Submit the form via AJAX to handle the cancel request
                fetch(cancelForm.action, {
                    method: 'POST'
                })
                    .then(response => response.json())
                    .then(data => {
                        if (data.message === "Request cancelled successfully") {
                            Swal.fire('Success!', 'Your request has been cancelled.', 'success')
                                .then(() => {
                                    window.location.href = '/myreserved';
                                });
                        }
                    })
                    .catch(error => {
                       Swal.fire('Failed!', 'Your request has not been cancelled.', 'error');
                    });
            }
        });
    });
});

</script>


</body>
</html>